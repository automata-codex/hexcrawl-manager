---
interface Props {
  title: string;
  href?: string;
  gridItem?: boolean;
}

const { title, href, gridItem = true } = Astro.props;
---

<style>
  h2.title.is-3 {
    margin-top: 0;
    margin-bottom: 0.25rem;
    text-align: center;
  }

  .box {
    text-align: center;
  }

  a.box {
    display: block;
    color: inherit;
    text-decoration: none;
  }

</style>

{
  gridItem ? (
    <div class="column is-one-third">
      {href ? (
        <a href={href} class="box">
          <h2 class="title is-3">{title}</h2>
          <slot />
        </a>
      ) : (
        <div class="box">
          <h2 class="title is-3">{title}</h2>
          <slot />
        </div>
      )}
    </div>
  ) : href ? (
    <a href={href} class="box">
      <h2 class="title is-3">{title}</h2>
      <slot />
    </a>
  ) : (
    <div class="box">
      <h2 class="title is-3">{title}</h2>
      <slot />
    </div>
  )
}
