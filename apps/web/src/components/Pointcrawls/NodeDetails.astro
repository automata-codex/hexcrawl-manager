---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';

import type { EncounterTableData } from '@skyreach/schemas';

import RandomEncounterTable from '../RandomEncounterTable/RandomEncounterTable.astro';
import Unlocks from '../Unlocks.svelte';
import { mergeEncounterOverrides } from '../../utils/encounters';
import { getFlatKnowledgeTrees } from '../../utils/knowledge-trees';

const flatKnowledgeTrees = await getFlatKnowledgeTrees();
const allEncounters = await getCollection('encounters');

interface ConnectedEdgeInfo {
  id: string;
  label: string;
  direction: 'to' | 'from';
  otherNode?: {
    id: string;
    label: string;
    name: string;
  };
  otherNodeId: string;
}

interface Props {
  node: CollectionEntry<'pointcrawl-nodes'>;
  pointcrawl: CollectionEntry<'pointcrawls'>;
  pointcrawlSlug: string;
  connectedEdges: ConnectedEdgeInfo[];
}

const { node, pointcrawl, pointcrawlSlug, connectedEdges } = Astro.props;

// Build encounter table if pointcrawl has one
let encounters: EncounterTableData | undefined = pointcrawl.data.encounters;
let encounterChance = pointcrawl.data.encounterChance ?? 8;

// Apply node-level overrides
if (encounters && node.data.encounterOverrides) {
  encounters = mergeEncounterOverrides(encounters, node.data.encounterOverrides);
}

// Node-specific encounter chance takes precedence
encounterChance = node.data.encounterChance ?? encounterChance;
---

<style>
  .node-header {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }

  .node-meta {
    flex: 1;
    min-width: 200px;
  }

  .entry-badge {
    display: inline-block;
    background: var(--bulma-success);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
    margin-left: 0.5rem;
  }

  .level-info {
    color: var(--bulma-text-light);
  }

  .light-info {
    margin-bottom: 0;
  }

  .content-section {
    margin: 1rem 0;
  }

  .connections-section {
    flex: 1;
    min-width: 200px;

    ul {
      margin-bottom: 0;
    }
  }

  .encounters-list {
    margin-bottom: 1rem;
  }

  .treasure-section {
    margin: 1.5rem 0;
  }

  .treasure-item {
    margin-bottom: 0.5rem;
    padding: 0.5rem;
    background: var(--bulma-scheme-main-bis);
    border-radius: 4px;
  }

  .treasure-name {
    font-weight: 600;
  }

  .treasure-details {
    font-size: 0.875rem;
    color: var(--bulma-text-light);
  }
</style>

<div class="node-header">
  <div class="node-meta">
    <p>
      {node.data.level !== undefined && <span class="level-info">Level {node.data.level}</span>}
      {node.data.isEntry && <span class="entry-badge">Entry Point</span>}
    </p>
    {node.data.entryConditions && (
      <p class="entry-conditions"><strong>Entry Conditions:</strong> {node.data.entryConditions}</p>
    )}
    {(node.data.naturalLight || node.data.internalLight) && (
      <>
        {node.data.naturalLight && (
          <p class="light-info"><strong>Natural Light:</strong> {node.data.naturalLight}</p>
        )}
        {node.data.internalLight && (
          <p><strong>Internal Light:</strong> {node.data.internalLight}</p>
        )}
      </>
    )}
  </div>

  {connectedEdges.length > 0 && (
    <div class="connections-section">
      <p><strong>Connections:</strong></p>
      <ul>
        {connectedEdges.map((conn) => (
          <li class="connection-item">
            <a href={`/gm-reference/pointcrawls/${pointcrawlSlug}/${conn.id}`}>
              Edge {conn.label}
            </a>{' '}
            {conn.direction}{' '}
            {conn.otherNode ? (
              <a href={`/gm-reference/pointcrawls/${pointcrawlSlug}/${conn.otherNode.id}`}>
                {conn.otherNode.label}: {conn.otherNode.name}
              </a>
            ) : (
              <span>Unknown node ({conn.otherNodeId})</span>
            )}
          </li>
        ))}
      </ul>
    </div>
  )}
</div>

<Unlocks
  client:load
  knowledgeTrees={flatKnowledgeTrees}
  unlocks={node.data.unlocks ?? []}
/>

{
  node.data.treasure && node.data.treasure.length > 0 && (
  <div class="treasure-section">
    <p><strong>Treasure</strong></p>
    {node.data.treasure.map((item) => (
      <div class="treasure-item">
        <span class="treasure-name">{item.name}</span>
        <div class="treasure-details">
          {item.type}
          {item.rarity && ` (${item.rarity})`}
          {item.value && ` - ${item.value} gp`}
          {item.notes && ` - ${item.notes}`}
        </div>
      </div>
    ))}
  </div>
  )
}

{
  node.data.encounters && node.data.encounters.length > 0 && (
    <div class="encounters-list">
      <h2 class="title is-3">Keyed Encounters</h2>
      <ul>
        {node.data.encounters.map((encId) => {
          const encounter = allEncounters.find((e) => e.id === encId);
          const displayName = encounter?.data.name ?? encId;
          return (
            <li>
              <a href={`/gm-reference/encounters/${encId}`}>{displayName}</a>
            </li>
          );
        })}
      </ul>
    </div>
  )
}

{
  encounters && (
    <div class="encounters-section">
      <h2 class="title is-3">Random Encounters</h2>
      <p>
        <span class="inline-heading">Chance of encounter:</span>{' '}
        {encounterChance * 5}% (&le;{encounterChance})
      </p>
      <RandomEncounterTable data={encounters} />
    </div>
  )
}

<div class="content-section">
  <slot />
</div>

