---
import type { StatBlockData } from '@achm/schemas';

interface Props {
  data: StatBlockData;
}

const { data } = Astro.props;
---

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 0.25rem;
  }

  span {
    color: var(--bulma-strong-color);
    font-weight: bold;
  }
</style>
<div class="container">
  <div>
    <span>Challenge:</span>
    {' '}
    {data.challenge_rating}
  </div>
  <div>
    <span>Proficiency Bonus:</span>
    +{data.proficiency_bonus}
  </div>
</div>
