---
import type { SpecialActionData } from '@achm/schemas';

interface Props {
  action: SpecialActionData;
}

const { action } = Astro.props;
---

<style>
  .action-name {
    font-style: italic;
    font-weight: bold;
    color: var(--bulma-strong-color);
  }

  .attack-type {
    font-style: italic;
  }
</style>
<div>
  <span class="action-name">
    {action.name}{action.recharge && ` (Recharge ${action.recharge})`}.
  </span>
  {' '}
  {action.desc}
</div>
