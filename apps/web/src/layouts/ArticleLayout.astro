---
import { formatText } from '../utils/text';

import Layout from './BaseLayout.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <link slot="stylesheet" rel="stylesheet" href="/article.css" />
  <section class="section">
    <div class="container is-max-desktop">
      <h1 class="title is-2">{formatText(title)}</h1>
      <slot />
    </div>
  </section>
</Layout>
