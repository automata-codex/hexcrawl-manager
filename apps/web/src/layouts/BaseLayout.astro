---
import SideNav from '../components/SideNav.svelte';
import TopBar from '../components/TopBar.astro';
import { getSidebarSections } from '../config/sidebar-sections';
import { getCurrentUserRole } from '../utils/auth';

interface Props {
  title: string;
}

const { title } = Astro.props;

const role = getCurrentUserRole(Astro.locals);
const sections = getSidebarSections(role);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Prevent flash of wrong theme (FOUC) by applying theme before CSS loads
      (function () {
        const stored = localStorage.getItem('theme-preference');
        if (stored === 'light') {
          document.documentElement.setAttribute('data-theme', 'light');
        } else if (stored === 'dark') {
          document.documentElement.setAttribute('data-theme', 'dark');
        }
        // 'system' or missing: no attribute, let Bulma use prefers-color-scheme
      })();
    </script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/fonts.css" />
    <link rel="stylesheet" href="/global-styles.css" />
    <slot name="stylesheet" />
    <style>
      .secret-greeting {
        display: none;
      }
    </style>
  </head>
  <body>
    <div class="secret-greeting hacker-hello">
      Greetings, traveller! ðŸ‘‹ The Index Oracle sees all. They know that you
      come seeking knowledge.
    </div>
    <TopBar />
    <SideNav sections={sections} client:load />
    <slot />
  </body>
</html>
