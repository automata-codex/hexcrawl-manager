---
import { getCluePath } from '../../../../config/routes';

/**
 * Redirect from legacy floating clue URLs to new unified clue URLs.
 * /session-toolkit/clues/floating-clues/[id] â†’ /session-toolkit/clues/[id]
 */

const { id } = Astro.params;
if (!id) {
  return new Response(null, {
    status: 404,
    statusText: 'Not found',
  });
}

return Astro.redirect(getCluePath(id), 301);
---
