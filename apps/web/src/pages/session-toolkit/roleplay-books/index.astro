---
import { getCollection } from 'astro:content';

import { getRoleplayBookPath } from '../../../config/routes';
import SecretLayout from '../../../layouts/SecretLayout.astro';

const roleplayBooks = await getCollection('roleplay-books');

// Sort by name
const sortedBooks = roleplayBooks.sort((a, b) =>
  a.data.name.localeCompare(b.data.name),
);
---

<style>
  .roleplay-books-list {
    margin-top: 2rem;
  }

  .book-item {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: var(--bulma-scheme-main-bis);
    border-left: 3px solid var(--bulma-link-text);
  }

  .book-item:hover {
    background-color: var(--bulma-scheme-main-ter);
  }

  .book-link {
    color: var(--bulma-link-text);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .book-link:hover {
    text-decoration: underline;
  }

  .book-keyword {
    color: var(--bulma-text-weak);
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }
</style>

<SecretLayout title="Roleplay Books">
  <div class="content">
    <p>
      Quick reference guides for roleplaying different cultures and peoples
      encountered in the campaign.
    </p>
  </div>

  <div class="roleplay-books-list">
    {
      sortedBooks.map((book) => (
        <div class="book-item">
          <a href={getRoleplayBookPath(book.id)} class="book-link">
            {book.data.name}
          </a>
          <div class="book-keyword">Keyword: {book.data.keyword}</div>
        </div>
      ))
    }
  </div>
</SecretLayout>
