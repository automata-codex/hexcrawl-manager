{
  "name": "skyreach",
  "version": "2.3.0",
  "description": "Campaign manager and data for _Beyond the Skyreach Mountains_",
  "private": true,
  "scripts": {
    "arch:check": "depcruise \"cli/**/*.ts\" \"packages/**/*.ts\" \"src/**/*.ts\" --config .dependency-cruiser.cjs",
    "astro": "astro",
    "build": "npm run -ws build",
    "build:clue-links": "bash scripts/clue-linker/setup_virtualenv.sh && scripts/clue-linker/.venv-clue-linker/bin/python scripts/clue-linker/generate-clue-links.py",
    "build:packages": "tsc -p tsconfig.workspace.json -b",
    "build:web": "astro check && npm run gen-json-schema && npm run build:clue-links && astro build",
    "changeset": "changeset",
    "check": "astro check",
    "clean:packages": "tsc -p tsconfig.workspace.json --clean",
    "clean:tests": "rm -rf .test-repos",
    "cli": "tsx cli/skyreach.ts",
    "clue-linker:setup": "bash scripts/clue-linker/setup_virtualenv.sh",
    "dev": "astro dev --host",
    "elevation:run": "bash scripts/elevation-solver/setup_virtualenv.sh && scripts/elevation-solver/.venv-elevation-solver/bin/python scripts/elevation-solver/elevation_solver.py",
    "elevation:setup": "bash scripts/elevation-solver/setup_virtualenv.sh",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "gen-json-schema": "node ./scripts/generate-json-schema.js",
    "lint": "npm run -ws lint",
    "lint:all": "eslint . --ext .js,.ts,.jsx,.tsx,.astro,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx,.astro,.svelte --fix",
    "preview": "astro preview",
    "release:version": "changeset version",
    "test": "npm run -ws test",
    "test:scribe": "vitest run ./cli/commands/scribe/**/*.spec.ts",
    "test:scribe:watch": "vitest --watch ./cli/commands/scribe/**/*.spec.ts",
    "typecheck": "tsc -p tsconfig.workspace.json -b"
  },
  "type": "module",
  "volta": {
    "node": "22.20.0",
    "npm": "11.6.1"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.2.6",
    "@astrojs/svelte": "^7.0.13",
    "@astrojs/ts-plugin": "^1.10.4",
    "@astrojs/vercel": "^8.1.4",
    "@clerk/astro": "^2.7.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/pro-light-svg-icons": "^6.7.2",
    "@fortawesome/pro-regular-svg-icons": "^6.7.2",
    "@fortawesome/pro-solid-svg-icons": "^6.7.2",
    "@fortawesome/pro-thin-svg-icons": "^6.7.2",
    "@fortawesome/svelte-fontawesome": "^0.2.3",
    "astro": "^5.7.13",
    "canvg": "^4.0.3",
    "commander": "^13.1.0",
    "enquirer": "^2.4.1",
    "lodash-es": "^4.17.21",
    "prompts": "^2.4.2",
    "rehype-add-classes": "^1.0.0",
    "remark": "^15.0.1",
    "remark-behead": "^3.1.0",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "remark-smartypants": "^3.0.2",
    "retext": "^9.0.0",
    "retext-english": "^5.0.0",
    "retext-smartypants": "^6.2.0",
    "retext-stringify": "^4.0.0",
    "svelte": "^5.28.6",
    "typescript": "^5.8.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.36.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.17",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.12.4",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "globals": "^16.4.0",
    "globby": "^14.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-svelte": "^3.4.0",
    "tsx": "^4.19.4",
    "vitest": "^3.2.4",
    "yaml": "^2.7.1",
    "zod-to-json-schema": "^3.24.5"
  }
}
