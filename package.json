{
  "name": "skyreach",
  "description": "Campaign manager and data for _Beyond the Skyreach Mountains_",
  "private": true,
  "scripts": {
    "arch:check": "depcruise \"apps/**/*.ts\" \"packages/**/*.ts\" --config .dependency-cruiser.cjs",
    "astro": "npm run -w @achm/web astro",
    "build": "npm run build:packages && npm run build:json-schemas",
    "build:force": "tsc -b tsconfig.workspace.json --force && npm run build:json-schemas",
    "build:json-schemas": "tsx packages/schemas/src/build-json-schemas.ts",
    "build:packages": "tsc -b tsconfig.workspace.json",
    "build:web": "npm run -w @achm/web build",
    "changeset": "changeset",
    "check": "npm run --workspaces check",
    "check:web": "npm run -w @achm/web check",
    "check:docs-clean": "git diff --quiet -- docs/api || (echo \"Docs are stale. Run 'npm run docs'.\" && exit 1)",
    "clean": "npm run clean:packages",
    "clean:branches": "git fetch --prune && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D || true",
    "clean:packages": "tsc -b tsconfig.workspace.json --clean && rimraf packages/*/dist",
    "clean:tests": "rm -rf .test-repos",
    "cli": "tsx apps/cli/src/hexcrawl.ts",
    "deps:fix": "syncpack fix-mismatches",
    "deps:list": "syncpack list-mismatches",
    "dev": "npm run -w @achm/web dev",
    "docs": "npm run docs:json && npm run docs:catalog",
    "docs:catalog": "node scripts/render-api-catalog.mjs",
    "docs:json": "typedoc --options typedoc.json --json docs/api/typedoc.json",
    "elevation:run": "bash scripts/elevation-solver/setup_virtualenv.sh && scripts/elevation-solver/.venv-elevation-solver/bin/python scripts/elevation-solver/elevation_solver.py",
    "elevation:setup": "bash scripts/elevation-solver/setup_virtualenv.sh",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "gen-json-schema": "npm run build:json-schemas",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.astro,.svelte",
    "lint:deprecated": "npm run --workspaces lint",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx,.astro,.svelte --fix",
    "pretest": "npm run build:packages",
    "pretest:scribe": "npm run build:packages",
    "pretest:scribe:watch": "npm run build:packages",
    "preview": "npm run -w @achm/web preview",
    "rebuild": "npm run clean && npm run build",
    "release:version": "changeset version",
    "test": "npm run --workspaces test",
    "typecheck": "tsc -b tsconfig.workspace.json"
  },
  "type": "module",
  "engines": {
    "node": ">=22.20.0",
    "npm": ">=11.6.1"
  },
  "volta": {
    "node": "22.20.0",
    "npm": "11.6.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "lodash-es": "^4.17.21",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "yaml": "^2.8.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.36.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.17",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-svelte": "^3.12.4",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.2",
    "globals": "^16.4.0",
    "globby": "^14.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.4",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.13",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
