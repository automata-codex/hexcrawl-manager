---
import { library, icon } from '@fortawesome/fontawesome-svg-core';
import { faDeer } from '@fortawesome/pro-solid-svg-icons';
import { renderBulletMarkdown, renderMarkdown } from '../../utils/markdown';
import SecretContent from '../Content/SecretContent.astro';
import type { BountyData } from '../../types';

interface Props {
  bounty: BountyData;
}

const { bounty } = Astro.props;

library.add(faDeer);
const animalIcon = icon(faDeer);
---
<style>
    .bounty-poster {
        font-style: italic;
    }

    .heading-container {
        display: flex;
        align-items: baseline;
        gap: 1rem;
    }
</style>
<div class="heading-container">
  <h2 class="title is-3">
    <Fragment set:html={renderBulletMarkdown(bounty.title)} />
  </h2>
  <div>
    <SecretContent>
      <a href=`/player-notes/bounty-board/${bounty.id}`>
        <Fragment set:html={animalIcon.html} />
      </a>
    </SecretContent>
  </div>
</div>
<p class="bounty-poster">Posted by: {bounty.poster}</p>
<div>
  <Fragment set:html={renderMarkdown(bounty.text)} />
</div>
