---
import { SECURITY_ROLE } from '../utils/constants';
import type { SecurityRole } from '../utils/constants';

interface Props {
  role?: SecurityRole;
}

const { role = SECURITY_ROLE.PUBLIC } = Astro.props;
const { clearance } = (Astro.locals.auth().sessionClaims ?? { clearance: null }) as { clearance: string | null };

/**
 * Asks the question, "Is someone with <clearance> allowed to access content restricted to <role>?"
 * @param role
 * @param clearance
 * @returns {boolean}
 */
function isAccessAllowed(role: SecurityRole, clearance: string | null): boolean {
  // "GM" can access everything
  if (clearance === SECURITY_ROLE.GM) {
    return true;
  }

  // You have to have "HIDDEN" clearance to view hidden content (remember "GM" can view everything)
  if (role === SECURITY_ROLE.HIDDEN && clearance === SECURITY_ROLE.HIDDEN) {
    return true;
  }

  // Everyone can access public content
  // noinspection RedundantIfStatementJS
  if (role === SECURITY_ROLE.PUBLIC) {
    return true;
  }

  return false;
}

---
<div>
{isAccessAllowed(role, clearance) &&
  <p>This is content just for the specified access level.</p>
}
{isAccessAllowed(SECURITY_ROLE.HIDDEN, clearance) &&
  <p>This is hidden content.</p>
}
{isAccessAllowed(SECURITY_ROLE.PUBLIC, clearance) &&
  <p>This is public content.</p>
}
</div>
