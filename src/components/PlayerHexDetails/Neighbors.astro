---
import { getHexNeighbors } from '../../../lib/hexes';

import type { HexData } from '../../types';

interface Props {
  hex: HexData;
}

const { hex } = Astro.props;
const neighbors = getHexNeighbors(hex.id);
---

<div>Neighbors:</div>
{
  neighbors.map((neighbor) => (
    <div>
      <a href={`/session-toolkit/hexes/${neighbor.toLowerCase()}`}>
        {neighbor}
      </a>
    </div>
  ))
}
