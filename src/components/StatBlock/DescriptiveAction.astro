---
import type { DescriptiveActionData } from '../../types';

interface Props {
  action: DescriptiveActionData
}

const { action } = Astro.props;
---
<style>
    .action-name {
        font-style: italic;
        font-weight: bold;
    }

    .attack-type {
        font-style: italic;
    }
</style>
<div>
  <span class="action-name">{action.name}.</span>
  {' '}
  {action.desc}
</div>
