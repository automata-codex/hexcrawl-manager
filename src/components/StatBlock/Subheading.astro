---
import { startCase, toLower } from 'lodash-es';
import type { StatBlockData } from '../../types';

interface Props {
  data: StatBlockData
}

const { data } = Astro.props;
const size = startCase(toLower(data.size));
const type = startCase(toLower(data.type));
const subtype = data.subtype ? ` (${startCase(toLower(data.subtype))}),` : ',';
const alignment = startCase(toLower(data.alignment));
---
<p>{size} {type}{subtype} {alignment}</p>
