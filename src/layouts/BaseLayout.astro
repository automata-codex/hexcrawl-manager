---
import SideNav from '../components/SideNav.svelte';
import TopBar from '../components/TopBar.astro';
import { getCurrentUserRole } from '../utils/auth';
import { getSidebarSections } from '../utils/sidebar-sections';

interface Props {
  title: string;
}

const { title } = Astro.props;

const role = getCurrentUserRole(Astro.locals);
const sections = getSidebarSections(role);
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css"
		/>
		<link rel="stylesheet" href="/fonts.css" />
		<link rel="stylesheet" href="/global-styles.css" />
		<slot name="stylesheet" />
		<style>
			.secret-greeting {
				display: none;
			}
		</style>
	</head>
	<body>
	  <div class="secret-greeting hacker-hello">
			Greetings, traveller! ðŸ‘‹ The Index Oracle sees all. They know that you come seeking knowledge.
		</div>
	  <TopBar />
		<SideNav sections={sections} client:load />
		<slot />
	</body>
</html>
