---
import Map from '../../components/InteractiveMap/Map.svelte';
import MapLayout from '../../layouts/MapLayout.astro';
import { getCollection } from 'astro:content';

const hexEntries = await getCollection('hexes');
const hexes = hexEntries.map((entry) => entry.data);
---
<MapLayout title="Interactive Map">
  <Map client:load {hexes} />
</MapLayout>
