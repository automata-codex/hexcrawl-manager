---
import { getEntry, render } from 'astro:content';
import SecretContent from '../../../components/Content/SecretContent.astro';
import ArticleLayout from '../../../layouts/ArticleLayout.astro';

const publicArticle = await getEntry('articles', 'cosmology-public');
const secretArticle = await getEntry('articles', 'cosmology-secret');
if (!publicArticle || ! secretArticle) {
  throw new Error('Article(s) not found');
}
const { Content: PublicArticleContent } = await render(publicArticle);
const { Content: SecretArticleContent } = await render(secretArticle);
---
<ArticleLayout title="Cosmology">
  <PublicArticleContent />
  <SecretContent>
    <SecretArticleContent />
  </SecretContent>
</ArticleLayout>
