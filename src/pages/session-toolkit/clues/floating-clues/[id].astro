---
import { getEntry } from 'astro:content';

import FloatingClue from '../../../../components/FloatingClue.astro';
import SecretLayout from '../../../../layouts/SecretLayout.astro';

// Get the ID from the incoming server request
const { id } = Astro.params;
if (!id) {
  return new Response(null, {
    status: 404,
    statusText: 'Not found',
  });
}

// Query for the entry directly using the request slug
const clueData = await getEntry('floatingClues', id);

// Redirect if the entry does not exist
if (clueData === undefined) {
  return new Response(null, {
    status: 404,
    statusText: 'Not found',
  });
}

const clue = clueData.data;
const title = `Floating Clue: ${clue.name}`;
---

<style is:global>
  h3.title.is-4 {
    margin-bottom: 0.25rem;
  }
</style>
<SecretLayout title={title}>
  <FloatingClue clue={clue} showDetail={true} showName={false} />
</SecretLayout>
