{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@skyreach/cli-kit": ["packages/cli-kit/src/index.ts"],
      "@skyreach/core": ["packages/core/src/index.ts"],
      "@skyreach/data": ["packages/data/src/index.ts"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    ".astro/types.d.ts",
    "src",
    "schemas",
    "lib",
    "cli",
    "scripts",
    "data",
    "astro.config.mjs",
    "svelte.config.js"
  ],
  "exclude": [
    "dist",
    "packages/**/dist"
  ]
}
